.content {
  padding-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 17px; 
}

.message {
  font-size: 13px;
  color: #bababa;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
