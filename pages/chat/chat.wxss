.fill {
  height: 100rpx;
}

.footer {
  display: flex;
  flex-direction: row; 
  align-items: center;
  align-self: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
  height: 80rpx; 
}

.footer input{
  padding-left: 10rpx;
  flex: 1;
}

.footer text {
  color: #1296db;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;  
}

.item {
  display: flex;
  flex-direction: column;
}

.item .time {
  font-size: 11px;
  color: #b2b2b2;
  padding-top: 20rpx;
  text-align: center;
}

.message {
  display: flex;
}

.message image {
  height: 75rpx;
  width: 75rpx;
  border-radius: 75rpx;
  margin: 20rpx;
}

.message .content {
   width: 70%;  
   margin-top: 20rpx; 
}

.message .content text {
  display: -webkit-box;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: -1;
  -webkit-box-orient: vertical;
  padding-right: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  border-radius: 30rpx;
  background-color: white; 
}

.send {
  flex-direction: row-reverse;
  text-align: right;
}

.back {
  flex-direction: row;
}