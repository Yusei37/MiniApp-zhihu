#write {
  padding-right: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 30rpx;
  white-space: nowrap;
  border-radius: 10rpx;
  background-color: #fff0f5;
  width: fit-content;
}

.header {
  display: flex;
  flex-direction: row;
}

.avatar image {
  display: flex;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  vertical-align: middle;
}

.info {
  display: flex;
  flex: 1;
}

.info text {
  margin-left: 10rpx;
  vertical-align: middle;
}

#name {
  color: black;
}

#follow {
  color: white;
  padding-right: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  white-space: nowrap;
  border-radius: 10rpx;
  background-color: #b23aee;
  width: fit-content;
}

.weui-media-box__info {
  display: flex;
  flex-direction: column;
  text-align: right;
  margin-bottom: 100rpx;
}

.weui-media-box__info__meta {
  padding-top: 20rpx;
}

.weui-panel__ft {
  width: 100%;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  background-color: white;
}

.updown {
  display: flex;
  flex: 1;
  flex-direction: row;  
}

.other {
  display: flex;
  flex: 1;
  flex-direction: row-reverse;
}

.item {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-right: 40rpx;
  align-items: center;
  align-self: center;
}

.item image {
  width: 45rpx;
  height: 45rpx;
}

.item text {
  color: #8a8a8a;
  font-size: 11px;
}

#up {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  white-space: nowrap;
  border-radius: 10rpx;
  background-color: #fff0f5;
  width: fit-content;
}

#up text {
  color: #8a8a8a;
  font-size: 11px;
}

#down {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-right: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  white-space: nowrap;
  border-radius: 10rpx;
  background-color: #fff0f5;
  width: fit-content;
}
